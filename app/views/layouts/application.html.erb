<!DOCTYPE html>
<html>
<head>
  <title>Kitty Kat's New Application</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1>Kitty App</h1>

<% flash.each do |status, message| %>

<div class="panel-<%= status %>"><%= message %></div>

<% end %>

<%= yield %>

<% if request.path != root_path %>
<p><%= link_to "Return Home", root_path %></p>
<% end %>
<% if logged_in? %>
	<p><%= link_to "Log Out", logout_path, method: :delete %></p>
<% else %>
	<p><%= link_to "Log In", login_path %></p>
<% end %>
</body>
</html>
