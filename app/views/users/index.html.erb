<h2>List of Users</h2>

<ul>
	<% @users.each do |user| %>
	<li>
		<%= user.username+ " " + user.fullname + " " + user.slug.to_s + " " + user.email %>
		<%= link_to "See User", user_path(user) %>
		
		<% if logged_in? %>
		<%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %>
		<% end %>
		
	</li>
	<% end %>

</ul>

<%= link_to "Create New User", new_user_path %>