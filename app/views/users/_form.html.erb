<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |message| %>
<p>Error detected: <%= message %></p>
<% end %>
<% end %>

<%= form_for @user do |f| %>
		<%= f.label :username, "User Name" %>
		<%=f.text_field :username, placeholder: "Unique Username", autofocus: true %>
<br>
		<%= f.label :password, "Password" %>
		<%=f.password_field :password, placeholder: "Unique Password" %>
		<br>
				<%= f.label :password_confirmation, "Confirm Password" %>
		<%=f.password_field :password_confirmation, placeholder: "Unique Password Again" %>
		<br>

		<%=f.label :fullname, "Full Name" %>
		<%=f.text_field :fullname, placeholder: "First and Last Name" %>
<br>
		<%=f.label :email, "Email Address" %>
		<%=f.email_field :email, placeholder: "user@example.com" %>
<br>
<%= f.submit %>
<%= button_tag "Reset", type: "reset" %>
<% if @user.new_record? %>
<%= link_to "Reset Form", new_user_path %>
<% end %>
<% end %>
