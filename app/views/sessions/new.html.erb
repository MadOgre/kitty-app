
<h2>Please log in here</h2>

<%= form_for @user, url: login_path, html: {class: "login", id: "login"} do |f| %>
		<%= f.label :username, "User Name" %>
		<%=f.text_field :username, placeholder: "Username", autofocus: true %>
<br>
		<%= f.label :password, "Password" %>
		<%=f.password_field :password, placeholder: "Password" %>
		<br>
		
<%= f.submit "Log In" %>
<% end %>